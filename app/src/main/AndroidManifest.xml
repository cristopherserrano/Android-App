<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitebuilder">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MealPlanActivity"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".AddMealActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".GroceryListActivity"
            android:label="@string/title_grocery_list"
            />
        <activity
            android:name=".StorePickerActivity"
            android:label="@string/title_store"
            />
        <activity
            android:name=".SettingsActivity"
            android:label="Sign out"
            />

        <activity android:name=".startpage"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MealDetailActivity"
            android:label="@string/title_meal_plan"/>

        <activity
            android:name=".AboutYouActivity"
            android:theme="@style/NoActionBar"
            />
        <activity
            android:name=".AllergyActivity"
            android:theme="@style/NoActionBar"
            />
        <activity
            android:name=".DietActivity"
            android:theme="@style/NoActionBar"
            />
    </application>

</manifest>